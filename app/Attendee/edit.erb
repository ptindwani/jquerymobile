<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @attendee.name %></h1>
    <a href="<%= url_for :action => :show, :id => @attendee.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">Cancel</a>
    <a href="<%= url_for :action => :delete, :id => @attendee.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">Delete</a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @attendee.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="attendee[name]" class="fieldLabel">Name</label>
            <input type="text" id="attendee[name]" name="attendee[name]" value="<%= @attendee.name %>" <%= placeholder( "Name" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="attendee[email]" class="fieldLabel">Email</label>
            <input type="text" id="attendee[email]" name="attendee[email]" value="<%= @attendee.email %>" <%= placeholder( "Email" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
