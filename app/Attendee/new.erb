<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @attendee.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">Cancel</a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @attendee.object %>"/>

      
          <div data-role="fieldcontain">
            <label for="attendee[name]" class="fieldLabel">Name</label>
            <input type="text" id="attendee[name]" name="attendee[name]" <%= placeholder("Name") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="attendee[email]" class="fieldLabel">Email</label>
            <input type="text" id="attendee[email]" name="attendee[email]" <%= placeholder("Email") %> />
          </div>
      

      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
